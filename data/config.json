{
  "project": {
    "name": "Stadtmuseum Viewer",
    "quality": 1
  },
  "delimiter": ";",
  "loader": {
    "info": "data/info.md",
    "items": "data/data.csv",
    "timeline": "data/timeline.csv",
    "layouts": [
      {
        "title": "Time"
      },
      {
        "title": "Color grid",
        "url": "data/colors.csv",
        "type": "grid",
        "scale": 1.0
      },
      {
        "title": "Similarity", 
        "url": "data/tsne.csv",
        "scale": 1.2
      }
    ],
    "textures": {
      "medium": {
        "size": 256,
        "url": "data/sprites/spritesheet.json"
      },
      "detail": {
        "size": 1024,
        "url": "data/1024/"
      }
    }
  },
  "style": {
    "fontColor": "#333333",
    "fontColorActive": "#ffffff", 
    "fontBackground": "#e91e63",
    "canvasBackground": "#f5f5f5",
    "timelineBackground": "#ffffff",
    "timelineFontColor": "#333",
    "detailBackground": "#ffffff",
    "infoBackground": "#333333",
    "infoFontColor": "#ffffff"
  },
  "projection": {
    "columns": 6
  },
  "detail": {
    "structure": [
      {
        "name": "Titel",
        "source": "_Titel",
        "display": "column",
        "type": "text"
      },
      {
        "name": "Künstler:in", 
        "source": "_Künstler:in",
        "display": "column",
        "type": "text"
      },
      {
        "name": "Datierung",
        "source": "yearExact",
        "display": "column", 
        "type": "text"
      },
      {
        "name": "Technik",
        "source": "_Techniken",
        "display": "column",
        "type": "text"
      },
      {
        "name": "Inventarnummer",
        "source": "_Inventarnummer",
        "display": "column",
        "type": "text"
      }
    ]
  }
}
